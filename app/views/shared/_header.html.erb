<% unless current_page?("/signin") %>
  <nav class="header">
    <div class="navbar navbar-default header-img">
      <div class="navbar-header">
        <%= link_to "A & T", root_path, method: :get, class: "navbar-brand title-font" %>
      </div>
      <div class="nav navbar-nav navbar-right button">
        <% if session[:user_id] %>
        <p class="title-font">Logged in as: <%= @current_user.name %></p>
          <%= link_to "Logout", signout_path, method: :delete, class: "btn btn-default btn-sm title-font" %>
        <% end %>
      </div>
    </div>
  </nav>
<% end %>
